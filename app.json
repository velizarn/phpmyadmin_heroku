{
  "name": "phpMyAdmin on Heroku",
  "description": "A simple configuration wrapper to run phpMyAdmin on Heroku",
  "repository": "https://github.com/velizarn/phpmyadmin_heroku",
  "logo": "https://raw.githubusercontent.com/velizarn/phpmyadmin_heroku/master/phpmy-heroku.png",
  "keywords": [
    "phpmyadmin",
    "heroku"
  ],
  "addons": [],
  "buildpacks": [
    { "url": "heroku/php" },
    { "url": "velizarn/heroku-buildpack-nano" }
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "free",
      "command": "web: vendor/bin/heroku-php-apache2 phpmyadmin/"
    }
  },
  "env": {
    "PHPMYADMIN_BLOWFISH_SECRET": {
      "description": "This is needed for cookie based authentication to encrypt password in cookie",
      "generator": "secret",
      "required": true
    },
    "MYSQL_HOST": {
      "description": "MySQL host",
      "value": "",
      "required": false
    },
    "ALLOWDENY_ORDER": {
      "description": "AllowDeny Order - possible values: allow,deny / deny,allow / explicit",
      "value": "",
      "required": false
    },
    "MYSQL_USER": {
      "description": "Allowed username",
      "value": "%",
      "required": false
    },
    "WHITELIST_IP": {
      "description": "Allowed IP address/s",
      "value": "all",
      "required": false
    }
  }
}
